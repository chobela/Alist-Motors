<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="appexpress.com.matebeto">

    <uses-permission android:name="permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@drawable/ash"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FoodDetails" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Signup" />
        <activity
            android:name=".Login"
            android:theme="@style/AppTheme" />
        <activity android:name=".Forgot" />
        <activity
            android:name=".Search"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".Help" />
        <activity android:name=".Network" />
        <activity
            android:name=".Cars"
            android:label="@string/title_activity_cars"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CarDetalis"
            android:label="@string/title_activity_car_detalis"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddCar"
            android:label="@string/title_activity_add_car"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CarInfo"
            android:label="Vehicle Information"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SearchActivity"
            android:label="Search"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Test"
            android:label="Search"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Advanced"
            android:label="Advanced Search"
            android:theme="@style/AppTheme" />
        <activity android:name=".Profile"></activity>
    </application>

</manifest>