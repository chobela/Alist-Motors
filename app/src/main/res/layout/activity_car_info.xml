<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/White"
    tools:context="appexpress.com.alist.CarInfo"
   >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarf"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout
    android:layout_marginTop="56dp"
    android:id="@+id/activity_car_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="appexpress.com.alist.CarInfo">

    <TextView
        android:id="@+id/uid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:padding="10dp"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/phone"
            android:layout_centerVertical="true"
            android:background="@drawable/edt_corner"
            android:inputType="number"
            android:hint="Contact phone"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/Black"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:padding="10dp"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/email"
            android:layout_centerVertical="true"
            android:background="@drawable/edt_corner"
            android:inputType="text"
            android:hint="Email address"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/Black"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:padding="10dp"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/town"
            android:layout_centerVertical="true"
            android:background="@drawable/edt_corner"
            android:inputType="text"
            android:hint="Town"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/Black"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:padding="10dp"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/meal"
            android:layout_centerVertical="true"
            android:background="@drawable/edt_corner"
            android:inputType="text"
            android:hint="Vehicle make"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/Black"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:padding="10dp"
        android:layout_marginTop="10dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/model"
            android:layout_centerVertical="true"
            android:background="@drawable/edt_corner"
            android:inputType="text"
            android:hint="Vehicle model"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/Black"/>

    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:layout_marginTop="10dp"
        />

    <Spinner
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="2dp"
        android:padding="10dp"
        android:background="@drawable/gradient_spinner"
        android:layout_below="@+id/txt"
        style="@style/spinner_style"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:padding="10dp"
        android:layout_marginTop="10dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/price"
            android:layout_centerVertical="true"
            android:background="@drawable/edt_corner"
            android:inputType="number"
            android:hint="Price"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/Black"/>

    </RelativeLayout>



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Currency:"
        android:layout_marginTop="10dp"
        />

    <Spinner
        android:id="@+id/currency"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="2dp"
        android:padding="10dp"
        android:paddingLeft="4dp"
        android:background="@drawable/gradient_spinner"
        android:layout_below="@+id/txt"
        style="@style/spinner_style"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:padding="10dp"
        android:layout_marginTop="10dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/engine"
            android:layout_centerVertical="true"
            android:background="@drawable/edt_corner"
            android:inputType="number"
            android:hint="Engine Size"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/Black"/>

    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Duty:"
        android:layout_marginTop="10dp"
        />


    <Spinner
        android:id="@+id/duty"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="2dp"
        android:padding="10dp"
        android:paddingLeft="4dp"
        android:background="@drawable/gradient_spinner"
        android:layout_below="@+id/txt"
        style="@style/spinner_style"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Fuel:"
        android:layout_marginTop="10dp"
        />


    <Spinner
        android:id="@+id/fuel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="2dp"
        android:padding="10dp"
        android:paddingLeft="4dp"
        android:background="@drawable/gradient_spinner"
        android:layout_below="@+id/txt"
        style="@style/spinner_style"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:padding="10dp"
        android:layout_marginTop="10dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/color"
            android:layout_centerVertical="true"
            android:background="@drawable/edt_corner"
            android:inputType="number"
            android:hint="Vehicle Color"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/Black"/>

    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Interior:"
        android:layout_marginTop="10dp"
        />

    <Spinner
        android:id="@+id/interior"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="2dp"
        android:padding="10dp"
        android:paddingLeft="4dp"
        android:background="@drawable/gradient_spinner"
        android:layout_below="@+id/txt"
        style="@style/spinner_style"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:padding="10dp"
        android:layout_marginTop="10dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/venue"
            android:layout_centerVertical="true"
            android:background="@drawable/edt_corner"
            android:inputType="number"
            android:hint="Other features"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/Black"/>

    </RelativeLayout>


</LinearLayout>
</ScrollView>
</android.support.design.widget.CoordinatorLayout>